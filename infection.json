{
  "source": {
    "directories": [
      "src"
    ],
    "excludes": [
      "Application",
      "Infrastructure",
      "/\\Experimental\\.php/",
      "{.*/Output/Events/.*}"
    ]
  },
  "logs": {
    "text": "php://stdout",
    "stryker": {
      "badge": "master"
    }
  },
  "timeout": 10,
  "mutators": {
    "@default": true
  },
  "testFramework": "codeception",
  "testFrameworkOptions": "--skip=integration --skip=acceptance --skip=functional"
}