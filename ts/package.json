{
    "name": "theme-json-generator",
    "version": "0.0.3",
    "description": "WordPress theme.json generator from a Typescript",
    "bin": {
        "theme-json": "bin/theme-json"
    },
    "main": "dist/index.js",
    "directories": {
        "bin": "bin",
        "doc": "../docs",
        "test": "tests"
    },
    "scripts": {
        "dev": "tsc --watch",
        "build": "tsc",
        "test": "jest",
        "cs": "prettier --check .",
        "cs:fix": "prettier --write .",
        "lint": "eslint ./src --ext .ts",
        "qa": "yarn cs && yarn test",
        "tj:init": "node bin/theme-json init",
        "tj:dump": "node bin/theme-json dump",
        "tj:validate": "node bin/theme-json validate"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/ItalyStrap/theme-json-generator.git"
    },
    "keywords": [],
    "author": "Enea Overclokk",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/ItalyStrap/theme-json-generator/issues"
    },
    "homepage": "https://github.com/ItalyStrap/theme-json-generator#readme",
    "dependencies": {
        "ajv": "^8.12.0",
        "ajv-draft-04": "^1.0.0",
        "commander": "^12.0.0"
    },
    "devDependencies": {
        "@jest/types": "^29.6.3",
        "@types/node": "^20.11.24",
        "@typescript-eslint/eslint-plugin": "^6.4.0",
        "eslint": "^8.0.1",
        "eslint-config-standard-with-typescript": "^43.0.1",
        "eslint-plugin-import": "^2.25.2",
        "eslint-plugin-n": "^15.0.0 || ^16.0.0 ",
        "eslint-plugin-promise": "^6.0.0",
        "interpret": "^3.1.1",
        "jest": "^29.7.0",
        "prettier": "3.2.5",
        "ts-jest": "^29.1.2",
        "ts-node": "^10.9.2",
        "typescript": "*"
    }
}
